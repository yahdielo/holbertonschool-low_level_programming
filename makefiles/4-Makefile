CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f *~
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(OBJ) $(CFLAGS)

	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) $(NAME)

oclean:
	$(RM) $(OBJ) $(NAME)

fclean:
	$(RM) $(NAME) $(OBJ)
re:
	$(CC) $(CFLAGS) -c -o $(SRC) $(OBJ) $(NAME)
